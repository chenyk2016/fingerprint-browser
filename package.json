{
  "name": "multi-browser",
  "version": "1.0.0",
  "description": "Multi-browser automation with Puppeteer",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "ts-node -P tsconfig.server.json src/index.ts",
    "dev": "nodemon",
    "test": "ts-node -P tsconfig.server.json src/index.ts --test",
    "clean": "rm -rf dist/*",
    "server": "ts-node -P tsconfig.server.json src/server.ts",
    "server:dev": "nodemon -P tsconfig.server.json src/server.ts",
    "server:build": "tsc -P tsconfig.server.json",
    "client:dev": "vite src/client",
    "client:build": "tsc -P src/client/tsconfig.json && vite build src/client",
    "client:preview": "vite preview src/client",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run server:build && npm run client:build",
    "package": "npm run build && node scripts/package.js",
    "package:exe": "npm run build && electron-builder",
    "type-check": "tsc -P tsconfig.server.json --noEmit && tsc -P src/client/tsconfig.json --noEmit",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "joi": "^17.12.0",
    "postcss": "^8.4.49",
    "puppeteer": "^21.7.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17",
    "uuid": "^9.0.1",
    "vite": "^5.0.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "fs-extra": "^11.2.0",
    "nexe": "^4.0.0-rc.6",
    "nodemon": "^3.0.3",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,tsx,js,jsx,json",
    "ignore": [
      "src/logs/*",
      "src/data/*"
    ],
    "delay": "1000",
    "exec": "ts-node -P tsconfig.server.json"
  },
  "build": {
    "appId": "com.multi-browser.app",
    "productName": "Multi Browser",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "src/electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
