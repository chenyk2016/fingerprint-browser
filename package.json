{
  "name": "multi-browser",
  "version": "1.0.0",
  "description": "Multi-browser automation with Puppeteer",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node src/index.js --test",
    "clean": "rm -rf profiles/*"
  },
  "dependencies": {
    "puppeteer": "^21.7.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "winston": "^3.11.0",
    "joi": "^17.12.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "js,json",
    "ignore": ["src/logs/*", "src/data/*"],
    "delay": "1000"
  },
  "puppeteer": {
    "downloadHost": "https://npmmirror.com/mirrors",
    "chromium_download_host": "https://npmmirror.com/mirrors/chrome-for-testing"
  }
}
